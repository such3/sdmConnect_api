    <link href="https://img.icons8.com" rel="stylesheet" />

    <style>
      /* Ensure there's no default margin/padding for the body and html */
      body,
      html {
        margin: 0;
        padding: 0;
      }

      /* Apply proper margin and padding around the body */
      .main-container {
        margin-left: auto;
        margin-right: auto;
        max-width: 1200px;
        padding-left: 16px;
        padding-right: 16px;
      }
    </style>
  </head>

  <body class="bg-gray-900 text-white dark:bg-gray-900 dark:text-white">
    <!-- Navbar -->
    <nav class="bg-gray-800 p-4">
      <div class="main-container flex justify-between items-center">
        <a href="#" class="text-2xl font-semibold">sdmConnect</a>
        <!-- Desktop Menu -->
        <div class="hidden md:flex space-x-6">
          <a href="/" class="text-white hover:text-blue-400">Home</a>
          <a href="#about" class="text-white hover:text-blue-400">About</a>
          <a href="#features" class="text-white hover:text-blue-400"
            >Features</a
          >
          <a href="#team" class="text-white hover:text-blue-400">Team</a>
          <a href="#contact" class="text-white hover:text-blue-400">Contact</a>
        </div>

        <!-- Hamburger Menu -->
        <div class="md:hidden">
          <button class="btn btn-ghost text-white" id="menu-toggle">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
              ></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div class="md:hidden hidden" id="mobile-menu">
        <div class="p-4 space-y-2">
          <a href="#home" class="block text-white hover:text-blue-400">Home</a>
          <a href="#about" class="block text-white hover:text-blue-400"
            >About</a
          >
          <a href="#features" class="block text-white hover:text-blue-400"
            >Features</a
          >
          <a href="#team" class="block text-white hover:text-blue-400">Team</a>
          <a href="#contact" class="block text-white hover:text-blue-400"
            >Contact</a
          >
        </div>
      </div>
    </nav>
